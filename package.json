{
  "version": "1.0.0",
  "description": "configuration app for data transfer unit",
  "main": "main.js",
  "scripts": {
    "start": "concurrently \"npm run start:react\" \"wait-on http://localhost:3000 && npm run start:electron\"",
    "start:electron": "nodemon --watch ./service/* --exec \"electron .\"",
    "start:react": "cd client && npm start",
    "build": "cd client && npm run build",
    "build-mac": "electron-packager . --overwrite \"Coiliiot Config\" --platform=darwin --icon=./img/blue_logo.icns --arch=arm64 --prune=true --out=build",
    "create-dmg": "electron-installer-dmg \"./build/Coiliiot Config-darwin-arm64/Coiliiot Config.app\" \"Coiliiot Config\" --overwrite",
    "build-win": "electron-packager . --overwrite --platform=win32 --icon=./img/icon.ico --arch=x64  --prune=true --out=build",
    "create-installer": "node createWinInstaller.js",
    "electron-build": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ruby94412/coiliiot_config_app.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ruby94412/coiliiot_config_app/issues"
  },
  "homepage": "https://github.com/ruby94412/coiliiot_config_app#readme",
  "devDependencies": {
    "concurrently": "^7.6.0",
    "electron": "^23.1.3",
    "electron-builder": "^23.6.0",
    "electron-installer-dmg": "^4.0.0",
    "electron-packager": "^17.1.1",
    "electron-winstaller": "^5.1.0",
    "electron-wix-msi": "^5.0.0",
    "nodemon": "^2.0.22",
    "wait-on": "^7.0.1"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "serialport": "^11.0.0"
  }
}
