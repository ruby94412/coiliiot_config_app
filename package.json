{
  "name": "coiliiot_config",
  "author": "Coiliiot",
  "version": "0.1.3",
  "description": "configuration app for data transfer unit",
  "main": "main.js",
  "build": {
    "appId": "com.example.coiliiotConfig",
    "productName": "Coiliiot Config",
    "copyright": "Copyright Â© year Coiliiot",
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "./img/blue_logo.icns"
    },
    "dmg": {
      "title": "Coiliiot Config",
      "icon": "./img/blue_logo.icns"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "./img/icon.ico"
    },
    "nsis": {
      "installerIcon": "./img/icon.ico",
      "uninstallerIcon": "./img/icon.ico",
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "language": "0x0804",
      "license": "./build/license_cn.txt",
      "installerLanguages": [
        "zh_CN"
      ],
      "include": "./build/installer.nsh"
    }
  },
  "scripts": {
    "start": "concurrently \"npm run start:react\" \"wait-on http://localhost:3000 && npm run start:electron\"",
    "start:electron": "nodemon --watch ./service/* --exec \"electron .\"",
    "start:react": "cd client && npm start",
    "build": "cd client && npm run build",
    "electron-build": "electron-builder",
    "dist": "electron-builder",
    "pack": "electron-builder --dir"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/coiliiot/serial_server_configuaration_app.git"
  },
  "publish": {
    "provider": "github",
    "url": "https://github.com/coiliiot/serial_server_configuaration_app",
    "owner": "coiliiot",
    "releaseType": "release"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ruby94412/coiliiot_config_app/issues"
  },
  "homepage": "https://github.com/ruby94412/coiliiot_config_app#readme",
  "devDependencies": {
    "concurrently": "^7.6.0",
    "electron": "^23.1.3",
    "electron-builder": "^23.6.0",
    "electron-installer-dmg": "^4.0.0",
    "electron-packager": "^17.1.1",
    "electron-winstaller": "^5.1.0",
    "electron-wix-msi": "^5.0.0",
    "nodemon": "^2.0.22",
    "wait-on": "^7.0.1"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.1",
    "serialport": "^11.0.0"
  }
}
